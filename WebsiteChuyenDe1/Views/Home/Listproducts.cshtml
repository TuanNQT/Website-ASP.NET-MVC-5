@model PagedList.IPagedList<WebsiteChuyenDe1.Models.Product>
@{
    Layout = "";
}
@using PagedList.Mvc;
@{
    var session = (WebsiteChuyenDe1.Models.UserLogin)Session[WebsiteChuyenDe1.Models.CommonConstants.USER_SESSION];
}
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

<style>
    .label_title {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        width: 100%;
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 2;
    }

        .label_title:hover {
            overflow: visible;
            white-space: normal;
            text-overflow: unset;
            width: 100%;
            display: -webkit-box;
            -webkit-box-orient: vertical;
            -webkit-line-clamp: 2;
            word-wrap: break-word;
        }
</style>
<div class="ads-grid">
    <div class="container">
        <!-- tittle heading -->
        <h3 class="tittle-w3l">
            Danh sách sản phẩm
            <span class="heading-style">
                <i></i>
                <i></i>
                <i></i>
            </span>
        </h3>
        <!-- //tittle heading -->
        <!-- product left -->
        <div class="side-bar col-md-3">
            <div class="search-hotel">
                <h3 class="agileits-sear-head">Search Here..</h3>
                <form action="" method="post">
                    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
                    {
                        <input type="search" placeholder="Product name..." name="searchString" required="">
                        <input type="submit" value=" ">
                    }
                </form>
            </div>
            <!-- price range -->
            <!-- //price range -->
            <!-- food preference -->
            <!-- //food preference -->
            <!-- discounts -->
            <!-- //discounts -->
            <!-- reviews -->
            <div class="customer-rev left-side">
                <h3 class="agileits-sear-head">Đánh giá từ khách hàng</h3>
                <ul>
                    <li>
                        <a href="@Url.Action("Index","Home",new { rating=5 })">
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <span>5.0</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Home",new { rating=4 })">
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star-o" aria-hidden="true"></i>
                            <span>4.0</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Home",new { rating=3.5 })">
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star-half-o" aria-hidden="true"></i>
                            <i class="fa fa-star-o" aria-hidden="true"></i>
                            <span>3.5</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Home",new { rating=3 })">
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star-o" aria-hidden="true"></i>
                            <i class="fa fa-star-o" aria-hidden="true"></i>
                            <span>3.0</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Home",new { rating=2.5 })">
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star-half-o" aria-hidden="true"></i>
                            <i class="fa fa-star-o" aria-hidden="true"></i>
                            <i class="fa fa-star-o" aria-hidden="true"></i>
                            <span>2.5</span>
                        </a>
                    </li>
                </ul>
            </div>
            <!-- //reviews -->
            <!-- cuisine -->
            <div class="left-side">
                <h3 class="agileits-sear-head">Danh mục </h3>
                <ul>
                    @Html.Action("Categoryindex", "Home")
                </ul>
            </div>
            <!-- //cuisine -->
            <!-- deals -->
            <!-- //deals -->
        </div>
        <!-- //product left -->
        <!-- product right -->
        <div class="agileinfo-ads-display col-md-9">
            <div class="wrapper">
                <!-- first section (nuts) -->
                <div class="product-sec1">
                    <h3 class="heading-tittle">Sản phẩm</h3>
                    @foreach (var item in Model)
                    {
                        <div class="col-md-4 product-men">
                            <div class="men-pro-item simpleCart_shelfItem">
                                <div class="men-thumb-item">
                                    <img src="~/images/@item.ProductImage" style="width:160px;height:150px" alt="">
                                    <div class="men-cart-pro">
                                        <div class="inner-men-cart-pro">
                                            <a href="@Url.Action("Details","Home",new { id=item.ProductID,rv=item.ProductID,gy=item.ProductID})" class="link-product-add-cart">Quick View</a>
                                        </div>
                                    </div>
                                    @* <span class="product-new-top"></span>*@
                                </div>
                                <div class="item-info-product ">
                                    <h4>
                                        <a href="@Url.Action("Details","Home",new { id=item.ProductID,rv=item.ProductID,gy=item.ProductID})"><span class="label_title">@item.ModelName</span></a>
                                    </h4>
                                    <div class="info-product-price">
                                        <span class="item_price">$@item.UnitCost</span>
                                        @*<del>$@item.UnitCost</del>*@
                                    </div>
                                    <div class="snipcart-details top_brand_home_details item_add single-item hvr-outline-out">
                                        @if (session != null)
                                        {
                                            <a href="@Url.Action("Addtocart","Home",new { id=item.ProductID,soluong=1,cusid=session.UserID})"><input type="button" value=" Add to cart" class="button"></input></a>
                                        }
                                        else
                                        {
                                            <a  href="#" data-toggle="modal" data-target="#myModal1"><input type="button" value="Đăng nhập để mua" class="button"></input></a>
                                        }

                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    <div class="clearfix"></div>
                    @Html.PagedListPager(Model, page => Url.Action("Index",
                        new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
                    <div class="clearfix"></div>
                </div>
                <!-- //first section (nuts) -->
                <!-- second section (nuts special) -->
                <!-- //fourth section (noodles) -->
            </div>
        </div>
        <!-- //product right -->
    </div>
</div>