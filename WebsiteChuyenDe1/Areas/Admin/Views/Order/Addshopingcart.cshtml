@model WebsiteChuyenDe1.Models.ShoppingCart

@{
    ViewBag.Title = "Addshopingcart";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Addshopingcart</h2>
