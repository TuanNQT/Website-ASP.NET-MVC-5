        new gnMenu(document.getElementById('gn-menu'));
    </script>

    <!-- //js -->

    <script src="~/Areas/Admin/Data/template/js/screenfull.js"></script>
    <script>
        $(function () {
            $('#supported').text('Supported/allowed: ' + !!screenfull.enabled);

            if (!screenfull.enabled) {
                return false;
            }



            $('#toggle').click(function () {
                screenfull.toggle($('#container')[0]);
            });
        });
    </script>
    <script src="~/Areas/Admin/Data/template/js/jquery.nicescroll.js"></script>
    <script src="~/Areas/Admin/Data/template/js/scripts.js"></script>
